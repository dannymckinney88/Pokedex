<div class="d-flex flex-wrap">
  <% for(let i=0; i < pokemon.length; i++) { %>

    <div class="card  poke-card ">
      <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= i+1 %>.png" class="card-img-top" alt="">
      <div class="card-body ">
        <p class="card-text font-weight-bold text-center"> <%= pokemon[i].name %> </p>
        <form method="POST" action="/pokemon" class="d-flex flex-column align-items-center">
          <input hidden type="text" name="name" value="<%= pokemon[i].name %>">
          <input hidden type="text" name="url" value="<%= pokemon[i].url %>">
          <button type="submit">Add</button>
        </form>
      </div>
    </div>

  <% } %>
</div>
